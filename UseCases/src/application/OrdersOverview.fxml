<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.cell.TreeItemPropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.OrdersOverviewController">
   <center>
      <TableView fx:id="ordersTable" editable="true" prefHeight="335.0" prefWidth="500.0" BorderPane.alignment="CENTER">
        <columns>
        	<TableColumn prefWidth="75.0" text="Nr.">
        		<cellValueFactory>
        			<PropertyValueFactory property="orderId" />
        		</cellValueFactory>
        	</TableColumn>
         	<TableColumn prefWidth="75.0" text="Datum">
        		<cellValueFactory>
        			<PropertyValueFactory property="prettyDate" />
        		</cellValueFactory>
        	</TableColumn>
          	<TableColumn prefWidth="75.0" text="Benutzer">
        		<cellValueFactory>
        			<PropertyValueFactory property="username" />
        		</cellValueFactory>
        	</TableColumn>
        	<TableColumn prefWidth="75.0" text="Kunde">
        		<cellValueFactory>
        			<PropertyValueFactory property="customerName" />
        		</cellValueFactory>
        	</TableColumn>
            <TableColumn prefWidth="59.0" text="Status">
        		<cellValueFactory>
        			<PropertyValueFactory property="state" />
        		</cellValueFactory>
        	</TableColumn>
        </columns>
      </TableView>
   </center>
</BorderPane>
